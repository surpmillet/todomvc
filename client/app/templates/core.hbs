<section id="todoapp">
    <header id="header">
        <h1>todos</h1>
        {{todo-input id="new-todo" type="text" value=newTitle action="createItem" placeholder="What needs to be done?"}}
    </header>
    {{#if length}}
        <section id="main">
            {{#if canToggle}}
                {{input type="checkbox" id="toggle-all" checked=allAreDone}}
            {{/if}}
            {{outlet}}
        </section>
    {{/if}}
    {{#if length}}
        <footer id="footer">
            <span id="todo-count"><strong>{{remaining.length}}</strong> {{pluralize 'item' remaining.length}} left</span>
            <ul id="filters">
                <li>
                    {{#link-to "core.index" activeClass="selected"}}All{{/link-to}}
                </li>
                <li>
                    {{#link-to "core.active" activeClass="selected"}}Active{{/link-to}}
                </li>
                <li>
                    {{#link-to "core.completed" activeClass="selected"}}Completed{{/link-to}}
                </li>
            </ul>
            {{#if completed.length}}
                <button id="clear-completed" {{action "clearCompleted"}}>Clear completed ({{completed.length}})</button>
            {{/if}}
        </footer>
    {{/if}}
</section>
<footer id="info">
    <p>Double-click to edit a todo</p>
    <p>
        Created by
        <a href="http://github.com/tomdale">Tom Dale</a>,
        <a href="http://github.com/addyosmani">Addy Osmani</a>
    </p>
    <p>
        Updated by
        <a href="http://github.com/bantic">Cory Forsyth</a>
    </p>
    <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
</footer>