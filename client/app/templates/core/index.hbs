<ul id="todo-list">
    {{#each todo in model itemController="item"}}
        <li {{bind-attr class="todo.model.isCompleted:completed todo.model.isEditing:editing"}}>
            {{#if todo.model.isEditing}}
                {{todo-input type="text" class="edit" value=todo.bufferedTitle focus-out="saveItem" insert-newline="saveItem" escape-press="cancelEditing"}}
            {{else}}
                {{input type="checkbox" class="toggle" checked=todo.model.isCompleted}}
                <label {{action "editItem" on="doubleClick"}}>{{todo.model.title}}</label>
                <button {{action "removeItem"}} class="destroy"></button>
            {{/if}}
        </li>
    {{/each}}
</ul>